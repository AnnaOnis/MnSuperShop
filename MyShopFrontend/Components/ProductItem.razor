@if (Product is null)
{
    <div style="display:flex; flex-direction:column">
        <div><MudProgressCircular Color="Color.Primary" Size="Size.Large" Indeterminate="true" /></div>
        <div>Загрузка...</div>
    </div>

}
else
{
   <MudCard style="width: 300px">
        <MudCardMedia Image="@Product.ImageUrl" Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h4">@Product.Name</MudText>
            <MudText Typo="Typo.h5"><strong>Цена:</strong>@Product.Price &#8381</MudText>
            <MudText Typo="Typo.body1"><strong>Цена со скидкой:</strong>@Product.DiscountPrice &#8381</MudText>
            <MudText Typo="Typo.body1"><strong>Дата изготовления:</strong>@Product.ProducedAt.ToShortDateString()</MudText>
            <MudText Typo="Typo.body1"><strong>Срок годности:</strong>@Product.ExpiredAt.ToShortDateString()</MudText>
            <MudText Typo="Typo.body1"><strong>Количество в наличии:</strong>@Product.Stock</MudText>
        </MudCardContent>
    </MudCard> 
}


@code {
    [Parameter]
    public Product Product { get; set; } = null!;
}
