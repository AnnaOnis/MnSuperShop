
<div style="border:groove; border-radius: 10px; padding: 20px">
	<span style="font-weight: bold">Наименование: </span>@Product.Name<br>
	<span style="font-weight: bold">Цена: </span>@Product.Price<br>
	<span style="font-weight: bold">Цена со скидкой: </span>@Product.DiscountPrice<br>
	<span style="font-weight: bold">Срок годности: </span>@Product.ExpiredAt.ToString("d")<br>
	<span style="font-weight: bold">Количество в наличии: </span>@Product.Stock<br>
</div>


@code {
	[Parameter]
	public Product? Product { get; set; }

}
