@page "/account"

<MudText>Аккаунт</MudText>

@if (_account is null)
{
    <MudText Typo="Typo.h2"><MudLink Href="/login" Typo="Typo.h2">Войдите</MudLink> или <MudLink Href="/registration" Typo="Typo.h2">зарегистрируйтесь</MudLink>...</MudText>
}
else
{
    <MudCard style="width: 300px">
        <MudCardMedia Image="uzerFoto.jpg" Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h4">@_account.Name</MudText>
            <MudText Typo="Typo.h5">Icon="@Icons.Material.Filled.Email"@_account.Email</MudText>
        </MudCardContent>
    </MudCard>
}

