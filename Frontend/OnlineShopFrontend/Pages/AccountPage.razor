@page "/account"
@inherits AppComponentBase;

@if (@_account == null)
{
    <MudText Typo="Typo.h2"><MudLink Href="/login" Typo="Typo.h2">Войдите</MudLink> или <MudLink Href="/registration" Typo="Typo.h2">зарегистрируйтесь</MudLink>...</MudText>
}
else
{
    <MudCard style="width: 400px; height: 500px">
        <MudCardMedia Image="uzerFoto.jpg" Height="350" />
        <MudCardContent>
            <MudText Typo="Typo.h4">@_account.Name</MudText>
            <MudIcon Icon="@Icons.Material.Filled.Email" class="d-inline mr-5"></MudIcon>
            <MudText Typo="Typo.h5" class="d-inline">@_account.Email</MudText>
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" style="float:right;" OnClick="()=>LogOut()">Выход</MudButton>
        </MudCardContent>
    </MudCard>
}

