@using OnlineShop.HttpApiCient;

@inherits LayoutComponentBase;
@inject AppState State;
@inject IOnlineShopClient ShopClient;

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        @if (State.IsTokenChecked == false)
        {
            <MudButton Href="/login"
                       Variant="Variant.Outlined"
                       EndIcon="@Icons.Material.Filled.Person"
                       Color="Color.Inherit"
                       Class="mr-5">
                Вход
            </MudButton>
            <MudButton Href="/registration"
                       Variant="Variant.Outlined"
                       EndIcon="@Icons.Material.Filled.PersonAdd"
                       Color="Color.Inherit">
                Регистрация
            </MudButton>
        }
        else
        {
            <MudButton Variant="Variant.Outlined"
                       Color="Color.Inherit"
                       OnClick="()=>LogOut()">
                Выход
            </MudButton>
        }
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MySuperShop</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    void LogOut()
    {
        ShopClient.ResetAuthorizationToken();
        State.IsTokenChecked = false;
    }
}